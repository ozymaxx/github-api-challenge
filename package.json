{
  "name": "github-api-challenge",
  "version": "0.1.0",
  "description": "A technical exercise in Node/TypeScript to be used in recruitment.",
  "author": "Ciaran Morinan <c@hash.ai>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.1",
    "express": "4.17.1",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@types/express": "4.17.1",
    "@types/node": "16.11.12",
    "@types/node-fetch": "2.5.12",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "ts-node": "10.4.0",
    "typescript": "4.5.3"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{js,json,ts}'",
    "query": "ts-node ./scripts/query.ts --transpile-only",
    "ingest-pull": "ts-node ./scripts/ingest-pull.ts --transpile-only",
    "ingest-commits": "ts-node ./scripts/ingest-commits.ts --transpile-only",
    "start": "nodemon ./src/index.ts --transpile-only"
  }
}
